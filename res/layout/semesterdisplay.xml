<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="@drawable/background1">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="match_parent"
     android:orientation="vertical"> 
	
	
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:stretchColumns="2,4">
	
	<TableRow 
		android:id="@+id/Row1" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/termname" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="学期名称"
			android:textSize="16px"
			android:padding="3dip"></TextView>
		<EditText 
			android:id="@+id/termid" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:padding="3dip"
			android:editable="false"></EditText>
	</TableRow>

	<TableRow 
		android:id="@+id/Row2" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/termbegin" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="开始日期" 
			android:textSize="16px"
			android:padding="3dip"></TextView>
		<EditText 
			android:id="@+id/termbeginningtime" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:padding="3dip"
			android:editable="false"></EditText>
	</TableRow>

	<TableRow 
		android:id="@+id/Row3" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/termend" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="结束日期" 
			android:textSize="16px">
			android:padding="3dip"></TextView>
		<EditText 
			android:id="@+id/termendtime" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:padding="3dip"
			android:editable="false"></EditText>
	</TableRow>
	<TableRow 
		android:id="@+id/Row4" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/space" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="     " 
			android:textSize="24px"
			android:padding="3dip"></TextView>
	</TableRow>
	<TableRow 
		android:id="@+id/Row5" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/Courselist" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="学期课程" 
			android:textSize="20px"
			android:padding="3dip">
			</TextView>
	</TableRow>

	</TableLayout>
	<ListView
	    android:id="@+id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="200dip" 
	     />
	<LinearLayout 
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:gravity="center"> 

	<TableRow 
		android:id="@+id/Row6" 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="bottom">
		<Button 
			android:id="@+id/Button1" 
			android:layout_height="wrap_content" 
			android:text="添加课程" 
			android:textSize="16px" 
			android:gravity="center"
			android:layout_width="wrap_content"></Button>
		<Button 
			android:id="@+id/Button2" 
			android:layout_height="wrap_content" 
			android:text="编辑学期" 
			android:textSize="16px" 
			android:gravity="center"
			android:layout_width="wrap_content"></Button>
		<Button 
			android:id="@+id/Button3" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="返回" 
			android:textSize="16px" 
			android:gravity="center"></Button>
	</TableRow>
	</LinearLayout>
</LinearLayout>	

 </ScrollView>

