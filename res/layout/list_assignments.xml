<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@drawable/background1"
  >
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <Button android:text="按截止日期" android:id="@+id/btByDeadline" 
      android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"></Button>
      <Button android:text="按优先级" android:id="@+id/btByPriority" 
      android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"></Button>
      <Button android:text="按课程" android:id="@+id/btByCourses" 
      android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"></Button>
  </LinearLayout>
  <LinearLayout 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <RadioGroup android:id="@+id/radiogroup_ls"
      android:layout_width="match_parent"
      android:layout_height ="wrap_content"
      android:orientation="horizontal">
        <TextView android:text="显示" 
        android:textSize="18dip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"/>
      <RadioButton android:id="@+id/radioUnfinished"
        android:layout_width="0dip" 
        android:layout_weight="1"
        android:text="未完成作业" 
        android:layout_height="wrap_content" 
        android:checked="true"
        android:layout_marginLeft="10dip"/>
      <RadioButton android:id="@+id/radioAllassign"
        android:layout_width="0dip"  
        android:layout_weight="1"
        android:text="所有作业" 
        android:layout_height="wrap_content"/>
    </RadioGroup>
  </LinearLayout>
  <ListView android:id="@+id/listAssignments" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"></ListView>
</LinearLayout>
